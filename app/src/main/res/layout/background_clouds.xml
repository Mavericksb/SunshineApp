        />

    <ImageView
        android:id="@+id/cloudView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/cloud4"
        android:scaleX="2.8"
        android:scaleY="2"
        android:alpha="0.5"
        tools:visibility="gone"
        />

    <ImageView
        android:id="@+id/cloudView3"
        android:layout_width="match_parent"
