    <ImageView
        android:id="@+id/sunView2"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleY="3"
        android:scaleX="3"
        android:src="@drawable/sun2"
        />



    <ImageView
        android:id="@+id/starView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stars1"
        android:layout_marginTop="-30dp"
        android:scaleX="3"
        android:scaleY="3"
        tools:visibility="gone"
        />

    <ImageView
    android:id="@+id/starView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/stars2"
    android:scaleX="2"
    android:scaleY="2"
    android:layout_marginTop="-50dp"
        tools:visibility="gone"
    />

    <ImageView
        android:id="@+id/cloudView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/cloud6"
        android:scaleX="2"
        android:scaleY="1.5"
